				</executions>
				<dependencies>
					<dependency>
						<groupId>org.hibernate</groupId>
						<artifactId>hibernate-jpamodelgen</artifactId>
						<version>WORKING</version>
					</dependency>
				</dependencies>
			</plugin>-->
		</plugins>
	</build>


</project>
